<!DOCTYPE html>
<html>
<head>
    <title>Admin-Dashboard</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/style.css') }}">
</head>
<body>
    <h2>Admin-Dashboard</h2>
    <p><a href="{{ url_for('logout') }}">Abmelden</a></p>

    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        <ul class="flashes">
        {% for category, message in messages %}
          <li class="{{ category }}">{{ message }}</li>
        {% endfor %}
        </ul>
      {% endif %}
    {% endwith %}

    <h3>Benutzer√ºbersicht:</h3>
    <table>
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Admin</th>
                <th>Credits</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.code }}</td>
                <td>{{ user.name }}</td>
                <td>{% if user.is_admin %}Ja{% else %}Nein{% endif %}</td>
                <td>{{ credits_nach_benutzer[user.id] }}</td>
                <td><a href="{{ url_for('admin_user_transactions', user_id=user.id) }}">Transaktionen</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
